{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@app/*": [
                "app/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@guards/*": [
                "guards/*"
            ],
            "@forms/*": [
                "forms/*"
            ],
            "@ui/*": [
                "ui/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@src/types/*": [
                "types/*"
            ],
            "@api/*": [
                "api/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ]
}
